{
  "manifest_version": 3,
  "name": "Contact-X",
  "version": "1.0",
  "description": "Scrape, score, and contact leads directly from any website.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "https://identitytoolkit.googleapis.com/",
    "https://securetoken.googleapis.com/",
    "https://firestore.googleapis.com/"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Contact-X"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/in/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "https://mitbio.github.io/*"
    ]
  }
}